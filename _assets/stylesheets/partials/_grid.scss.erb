.page__article--inner {
    @include grid-column($columns:12);
    padding-bottom: rem-calc(30px);
    padding-top: rem-calc(30px);

    @media #{$medium-up} {
        @include grid-column($columns:7, $center:true);
        padding: rem-calc(50px) rem-calc(30px) !important;
        text-align: center;
    }
}

.post__article {
    margin-top: 30px;
}


.content {
    overflow: auto;
    padding: 50px 0;
}



.inner-columns {
    overflow: auto;
    position: relative;
    margin-top: rem-calc(40px);
}

.inner-columns--work {
    padding: rem-calc(50px) 0;
}

.inner-columns__col {
    @include grid-column($columns:12, $collapse: true);

    @media #{$medium-up} {
        @include grid-column($columns:6, $collapse: true);

        &:nth-of-type(1) {
            padding-right: 1.875rem;
        }

        &:nth-of-type(2) {
            padding-left: 1.875rem;
        }
    }
}


